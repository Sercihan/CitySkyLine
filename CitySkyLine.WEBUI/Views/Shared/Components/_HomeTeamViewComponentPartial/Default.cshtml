@model List<ResultTeamDTO>
<!-- Team Start -->
<div class="container-fluid py-6 px-5">
    <div class="text-center mx-auto mb-5" style="max-width: 600px;">
        <h1 class="display-5 text-uppercase mb-4"><div class="text-primary">PROFESYONEL</div> ÇALIŞANLARIMIZ</h1>
    </div>
    <div class="row g-5">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="row g-0">
                    <div class="col-10" style="min-height: 300px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100" src="~/img/@item.Image" style="object-fit: cover;">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="h-100 d-flex flex-column align-items-center justify-content-between bg-light">
                            <a class="btn" target="_blank" href="@item.TwitterURL"><i class="fab fa-twitter"></i></a>
                            <a class="btn" target="_blank" href="@item.FacebookURL"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn" target="_blank" href="@item.LinkedinURL"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn" target="_blank" href="@item.InstagramURL"><i class="fab fa-instagram"></i></a>
                            <a class="btn" target="_blank" href="@item.YoutubeURL"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="bg-light p-4">
                            <h4 class="text-uppercase">@item.Name</h4>
                            <span>@item.Title</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Team End -->