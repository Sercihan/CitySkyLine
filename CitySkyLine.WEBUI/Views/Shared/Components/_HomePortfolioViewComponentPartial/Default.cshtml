@model List<ResultProjectDTO>
<!-- Portfolio Start -->
<div class="container-fluid bg-light py-6 px-5">
    <div class="text-center mx-auto mb-5" style="max-width: 600px;">
        <h1 class="display-5 text-uppercase mb-4">SİZ İSTEDİNİZ <div class="text-primary">BİZ YAPTIK</div></h1>
    </div>
    <div class="row gx-5">
        <div class="col-12 text-center">
            <div class="d-inline-block bg-dark-radial text-center pt-4 px-5 mb-5">
                <ul class="list-inline mb-0" id="portfolio-flters">
                    <li class="btn btn-outline-primary bg-white p-2 active mx-2 mb-4" data-filter="*">
                        <img src="~/img/@Model[0].Image" style="width: 150px; height: 100px;">
                        <div class="position-absolute top-0 start-0 end-0 bottom-0 m-2 d-flex align-items-center justify-content-center" style="background: rgba(4, 15, 40, .3);">
                            <h6 class="text-white text-uppercase m-0">HEPSİ</h6>
                        </div>
                    </li>
                    <li class="btn btn-outline-primary bg-white p-2 mx-2 mb-4" data-filter=".first">
                        <img src="~/img/@Model[1].Image" style="width: 150px; height: 100px;">
                        <div class="position-absolute top-0 start-0 end-0 bottom-0 m-2 d-flex align-items-center justify-content-center" style="background: rgba(4, 15, 40, .3);">
                            <h6 class="text-white text-uppercase m-0">İNŞAATLAR</h6>
                        </div>
                    </li>
                    <li class="btn btn-outline-primary bg-white p-2 mx-2 mb-4" data-filter=".second">
                        <img src="~/img/@Model[2].Image" style="width: 150px; height: 100px;">
                        <div class="position-absolute top-0 start-0 end-0 bottom-0 m-2 d-flex align-items-center justify-content-center" style="background: rgba(4, 15, 40, .3);">
                            <h6 class="text-white text-uppercase m-0">RESTORASYONLAR</h6>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row g-5 portfolio-container">
        
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6 portfolio-item @(item.Type=="Insaat" ? "first" : "second")">
                <div class="position-relative portfolio-box">
                    <img class="img-fluid w-100" src="~/img/@item.Image" alt="">
                    <a class="portfolio-title shadow-sm" href="">
                        <p class="h4 text-uppercase">@item.Title</p>
                        <span class="text-body"><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.District.Name, @item.District.City.Name, @item.District.City.Country.Name</span>
                    </a>
                    <a class="portfolio-btn" href="~/img/@item.Image" data-lightbox="portfolio">
                        <i class="bi bi-plus text-white"></i>
                    </a>
                </div>
            </div>
        }
             
            
       
      
      
    </div>
</div>
<!-- Portfolio End -->