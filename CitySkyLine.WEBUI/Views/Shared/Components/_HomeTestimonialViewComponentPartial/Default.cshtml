@model List<ResultTestimonialDTO>
<!-- Testimonial Start -->
<div class="container-fluid bg-light py-6 px-5">
    <div class="text-center mx-auto mb-5" style="max-width: 600px;">
        <h1 class="display-5 text-uppercase mb-4">MÜŞTERİLERİMİZ <div class="text-primary">NE DİYOR</div></h1>
    </div>
    <div class="row gx-0 align-items-center">
        <div class="col-xl-4 col-lg-5 d-none d-lg-block">
            <img class="img-fluid w-100 h-100" src="~/img/testimonial.jpg">
        </div>
        <div class="col-xl-8 col-lg-7 col-md-12">
            <div class="testimonial bg-light">
                <div class="owl-carousel testimonial-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="row gx-4 align-items-center">
                            <div class="col-xl-4 col-lg-5 col-md-5">
                                <img class="img-fluid w-100 h-100 bg-light p-lg-3 mb-4 mb-md-0" src="~/img/@item.Image" alt="">
                            </div>
                            <div class="col-xl-8 col-lg-7 col-md-7">
                                <h4 class="text-uppercase mb-0">@item.Name</h4>
                                <p>@item.Title</p>
                                <p class="fs-5 mb-0">
                                    <i class="fa fa-2x fa-quote-left text-primary me-2"></i> @item.Description
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->