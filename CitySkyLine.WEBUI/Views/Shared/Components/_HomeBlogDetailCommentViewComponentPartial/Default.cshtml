@model List<ResultCommentDTO>

<div class="mb-5">
    <h3 class="text-uppercase mb-4">@Model.Count ADET YORUM</h3>
    @foreach (var item in Model)
    {
        <div class="d-flex mb-4">
            <img src="~/img/@item.Image" class="img-fluid" style="width: 45px; height: 45px;">
            <div class="ps-3">
                <h6><a href="">@item.Name</a> <small><i>@item.DateTime.ToString("dd/MM/yyyy")</i></small></h6>
                <p>
                    @item.Description
                </p>
            </div>
        </div>
    }
</div>